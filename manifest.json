{
    "name": "FOKKUS",
    "version": "0.1.0",
    "description": "Blocks distracting websites like social media to boost productivity.",
    "permissions": [
        "storage",
        "tabs"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    }
}